! Urxvt
!URxvt.intensityStyles: false
URxvt.buffered: true
URxvt.cursorColor: #395573
URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt.geometry: 80x22
URxvt.transparent: 0
URxvt*urgentOnBell: true
URxvt.lineSpace: 0
URxvt.letterSpace: 0
URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false

! Font settings
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! -- Fonts -- !
URxvt*font:xft:DejaVu Sans Mono:style=Book:pixelsize=13
URxvt*boldFont:xft:DejaVu Sans Mono:style=Bold:pixelsize=13

URxvt*italicFont:xft:dejavu sans mono:medium:pixelsize=13
URxvt*bolditalicFont:xft:dejavu sans mono:medium:pixelsize=13

! -- Colours -- !
!#include "/home/frank604/.colours/base16/base16-monokai.dark.256.xresources"
!#include "/home/frank604/.colours/monokai-dark"
!#include "/home/fletch/.colours/sanctuary"
#include "/home/fletch/.colours/wombat"

! --  Extensions -- !
URxvt.perl-ext-common: matcher,keyboard-select,url-select,clipboard,tabbed,font-size
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-u:      perl:url-select:select_next
URxvt.keysym.M-s:      perl:keyboard-select:search
URxvt.keysym.M-c:      perl:clipboard:copy
URxvt.keysym.M-v:      perl:clipboard:paste
URxvt.keysym.M-C-v:    perl:clipboard:paste_escaped
URxvt.url-select.launcher: firefox
URxvt.matcher.rend.0:  -Uline fg16
URxvt.matcher.button:  1

! --  font-size -- !
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

